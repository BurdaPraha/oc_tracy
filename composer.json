{
  "name": "burdapraha/oc_tracy",
  "type": "vqmod-plugin",
  "description": "Implementation Tracy Debugger for Opencart 2.x",
  "keywords": ["opencart", "tracy-debugger", "tracy", "sql-queries"],
  "homepage": "http://burda.cz/cs/kariera/volna-mista#tester-koder",
  "license": "MIT",
  "require": {
    "php": ">=5.4.0",
    "tracy/tracy": "^2.4"
  },
  "autoload": {
    "classmap": ["src/"]
  },
  "scripts": {
    "post-package-install": [
      "php -r \"rename('vendor/burdapraha/oc_tracy/vqmod/xml/tracy.xml', 'public/vqmod/xml/tracy.xml');\""
    ],
    "post-package-update": [
      "php -r \"rename('vendor/burdapraha/oc_tracy/vqmod/xml/tracy.xml', 'public/vqmod/xml/tracy.xml');\""
    ]
  }
}
